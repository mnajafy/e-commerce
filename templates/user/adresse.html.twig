{% extends 'base.html.twig' %}

{% block title %}Adresse
{% endblock %}

{% block body %}
	<section class="py-2 py-md-3 py-lg-4 py-xl-5">
		<div class="container">
			<div class="row">
				<div class="col-12 col-md-6 mx-auto mb-2 mb-md-3 mb-lg-4">
			        <h3 class="mb-4">Modifier votre adresse</h3>

					<div class="d-flex justify-content-between align-items-center mb-2 p-2 border bg-white">
						<div class="media-body text-dark">
							<h5>Nom</h5>
							<p class="mb-0">{{ app.user.username }}</p>
						</div>

						<a href="{{ path('profile_connexion_securite_edit_username') }}" class="btn btn-secondary">Modifier</a>
					</div>
                    
					<div class="d-flex justify-content-between align-items-center mb-2 p-2 border bg-white">
						<div class="media-body text-dark">
							<h5>Email</h5>
							<p class="mb-0">{{ app.user.email }}</p>
						</div>

						<button class="btn btn-secondary">Modifier</button>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}