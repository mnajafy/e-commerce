{% extends 'base.html.twig' %}

{% block title %}Connexion & Sécurité
{% endblock %}

{% block body %}
	<section class="py-2 py-md-3 py-lg-4 py-xl-5">
		<div class="container">
			<div class="row">
				<div class="col-12 col-md-6 mx-auto mb-2 mb-md-3 mb-lg-4">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">
							{{ message }}
						</div>
					{% endfor %}
					
					<h3 class="mb-4">Connexion et sécurité</h3>

					<div class="d-flex justify-content-between align-items-center mb-2 mb-md-3 mb-lg-4 p-2 border bg-white">
						<div class="media-body text-dark">
							<h5>Nom :</h5>
							<p class="mb-0">{{ app.user.username }}</p>
						</div>

						<a href="{{ path('profile_connexion_securite_edit_username') }}" class="btn btn-secondary">Modifier</a>
					</div>

					<div class="d-flex justify-content-between align-items-center mb-2 mb-md-3 mb-lg-4 p-2 border bg-white">
						<div class="media-body text-dark">
							<h5>Email :</h5>
							<p class="mb-0">{{ app.user.email }}</p>
						</div>

						<a href="{{ path('profile_connexion_securite_edit_email') }}" class="btn btn-secondary">Modifier</a>
					</div>

					<div class="d-flex justify-content-between align-items-center p-2 border bg-white">
						<div class="media-body text-dark">
							<h5>Mot de passe :</h5>
							<p class="mb-0">********</p>
						</div>

						<a href="{{ path('profile_connexion_securite_edit_password') }}" class="btn btn-secondary">Modifier</a>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
