{% extends 'base.html.twig' %}

{% block title %}{{ title }}
{% endblock %}

{% block body %}
	<section class="py-2 py-md-3 py-lg-4 py-xl-5">
		<div class="container">
			<div class="row">
				<div class="col-12 col-md-6 mx-auto mb-2 mb-md-3 mb-lg-4">
					<h3 class="mb-4">{{ title }}
					</h3>

					<div class="card">
						<div class="card-body">
							<p class="card-text">{{ msg }}</p>
							{{ form_start(form) }}
							{{ form_widget(form) }}
							<button class="btn btn-primary rounded-0">Enregistrer les modifications</button>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}