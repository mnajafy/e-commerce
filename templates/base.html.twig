<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>e-commerce
			{% block title %}
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<header class="bg-light">
				<nav class="navbar navbar-light bg-light">
					<a class="navbar-brand" href="{{ path('home') }}">e.commerce</a>

					<ul class="nav order-lg-2">
						<li class="nav-item dropdown">
							{% if app.user %}
								<a class="nav-link dropdown-toggle text-secondary" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="fas fa-user"></i>
									<span class="nav-link-span">{{ app.user.username }}</span>
								</a>
							{% else %}
								<a class="nav-link dropdown-toggle text-secondary" href="{{ path('security_login') }}" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									<i class="fas fa-user"></i>
									<span class="nav-link-span">connectez vous</span>
								</a>
							{% endif %}

							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
								{% if app.user %}
									<a class="dropdown-item" href="{{ path('profile', {username: app.user.username, id: app.user.id}) }}">{{ app.user.username }}</a>
									<a class="dropdown-item" href="#">Another action</a>
									<div class="dropdown-divider"></div>
									<a class="dropdown-item" href="{{ path('security_logout') }}">Déconnexion</a>
								{% else %}
									<a class="dropdown-item" href="{{ path('security_login') }}">Connectez vous</a>
									<div class="dropdown-divider"></div>
									<a class="dropdown-item" href="{{ path('security_logup') }}">Inscription</a>
								{% endif %}
							</div>
						</li>

						<li class="nav-item">
							<a class="nav-link text-secondary" href="#">
								<i class="fas fa-shopping-basket"></i>
								<div class="badge badge-pose badge-pill badge-dark">
									{% if app.user %}
										99+
									{% else %}
										0
									{% endif %}
								</div>
								<span class="nav-link-span">panier</span>
							</a>
						</li>
					</ul>

					<form class="form-inline form-search my-3 border flex-grow-1 order-lg-1">
						<select class="custom-select w-25 border-0 rounded-0">
							<option selected>Open this select menu</option>
							<option value="1">One</option>
							<option value="2">Two</option>
							<option value="3">Three</option>
						</select>

						<input class="form-control w-75 flex-grow-1 border-0" type="search" placeholder="Search" aria-label="Search">

						<button class="btn btn-search" type="submit">
							<i class="fas fa-search"></i>
						</button>
					</form>

					<ul class="nav order-lg-3">
						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Electronique
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Mode
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Livres
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Beauté
							</a>
						</li>


						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Auto & Moto
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Maison
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Jeux-vidèo
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Jardin
							</a>
						</li>

						<li class="nav-item">
							<a class="nav-link py-1 px-2 text-secondary" href="#">
								Voire plus +
							</a>
						</li>
					</ul>
				</nav>
			</header>
		{% endblock %}

		<main>
			{% block body %}{% endblock %}
		</main>

		<footer class="py-2 py-md-3 py-lg-4 bg-secondary">
			<div class="container">
				<div class="row">
					<div class="col-12 col-md-6">
						<p class="mb-md-0 text-light">© 2021 By
							<a class="text-light" href="https://github.com/mnajafy">Mohammad Najafy</a>
						</p>
					</div>

					<div class="col-12 col-md-6 text-md-right">
						<p class="mb-0">
							<a class="text-light" href="https://github.com/mnajafy">
								<i class="fab fa-github"></i>
								Afficher sur GitHub</a>
						</p>
					</div>
				</div>
			</div>
		</footer>

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
